<p>All the pizzas!</p>

<% @orders.each do |order| %>
<p>Name: <%= order.pretty_name() %> </p>
<p>Order: <%= order.quantity() %> x <%= order.topping() %></p>
<p><a href="/pizza-orders/<%= order.id %>">Show Order</a></p>

<form action="/pizza-orders/<%= order.id %>/edit" method="get">
  <input type="submit" value="Edit Order">
</form>

<form action="/pizza-orders/<%= order.id %>/delete" method="post">
  <input type="submit" value="Delete Order">
</form>


<hr/>
<% end %>
